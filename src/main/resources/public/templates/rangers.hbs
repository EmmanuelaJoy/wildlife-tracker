{{#partial "styles"}}

    <link rel='stylesheet' href='/css/rangers.css'>

{{/partial}}

{{#partial "content"}}

    {{#if ranger}}

        <h2>LIST OF RANGERS</h2>

        {{#each ranger}}
            <div class="row">
                <div class="column"></div>
                <ul class="ranger">
                    <li id="rangerList">
                        <a href="#" id="rangerListLink">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">{{name}}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">Badge Number: {{badge_number}}</h6>
                                    <p class="card-text">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Phone Number: {{phone_number}}</li>
                                        <li class="list-group-item">Email Address: {{email}}</li>
                                    </ul></p>
                                    <a href="#" class="card-link">Add Sighting</a>
                                    <a href="#" class="card-link">View Sighting</a>
                                </div>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
            </div>

        {{/each}}


    {{else}}
        <ul class="ranger" id="noRanger">
            <li id="rangerList">
                <a href="#" id="rangerListLink">
                    <h2>Sorry</h2>
                    <p>No Rangers Available</p>
                </a>
            </li>
        </ul>
    {{/if}}

{{/partial}}

{{> layout.hbs}}